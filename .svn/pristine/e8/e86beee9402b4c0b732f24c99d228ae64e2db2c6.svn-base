<!-- Header -->
<header>
    <div id="header" class="bg-cloud img-responsive" data-parallax="scroll" data-image-src="Images/bg.png">
        <div class="container">
            <div class="row" style="margin-top:20px;">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">$sitename$</span>
                        <hr class="star-primary">
                        <span class="skills" style="margin-top:50px;">$sitedescription$</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-offset-3 col-lg-6" style="margin-top: 80px;">
                    <div class="row control-group">
                        <div class="input-group">
                            <input class="form-control" type="email" placeholder="Your Email Address" id="emailHead" style=""
                                   required data-validation-required-message="Please enter your email address.">
                            <span class="input-group-btn">
                                <button class="btn btn-danger" type="submit">Get a Quotation Now!</button>
                            </span>
                        </div>
                        <p class="row help-block text-danger"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>