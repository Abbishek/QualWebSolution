<!-- Header -->
<header>
    <div class="bg-cloud" data-parallax="scroll" data-image-src="Images/bg.png">
        <div class="container">
            <div class="row" style="margin-top:20px;">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">$sitename$</span>
                        <hr class="star-primary">
                        <span class="skills" style="margin-top:50px;">$sitedescription$</span>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:150px;">
                <div class="col-md-offset-3 col-lg-6">
                    <div class="row control-group input-group">
                        <input type="text" class="form-control" placeholder="Your Email Address">
                        <span class="input-group-btn">
                            <button class="btn btn-danger" type="button" style="background-color:green;border-color:green;">Get a Quotation Now!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>